{
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": ">=8.0",
        "ext-curl": "*",
        "ext-dom": "*",
        "ext-libxml": "*",
        "fzaninotto/faker": "^1.5",
        "guzzlehttp/guzzle": "^7.0",
        "laminas/laminas-diactoros": "^2.8",
        "laminas/laminas-httphandlerrunner": "^2.1",
        "predis/predis": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "roave/security-advisories": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Areyounormis\\": "src/Areyounormis",
            "Core\\": "src/Core",
            "Kinopoisk\\": "src/Kinopoisk"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "tests": "./vendor/bin/phpunit",
        "tests-group": "@tests --group="
    }
}
